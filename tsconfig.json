{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
